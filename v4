<Drawer
  anchor="right"
  open={drawerOpen}
  onClose={() => setDrawerOpen(false)}
  sx={{ "& .MuiDrawer-paper": { width: 400, backgroundColor: "#1A2028", p: 2 } }}
>
  {drawerData ? (
    <>
      {/* Header with Name + ID + Status */}
      <Box sx={{ mb: 2 }}>
        <Typography variant="h6" sx={{ color: "white", fontWeight: 600 }}>
          {"name" in drawerData ? drawerData.name : drawerData.accountOwner}
        </Typography>
        <Box sx={{ display: "flex", gap: 1, mt: 1 }}>
          <Typography
            variant="body2"
            sx={{ color: "#ccc", backgroundColor: "#333", px: 1.5, py: 0.5, borderRadius: 1 }}
          >
            ID: {drawerData.id}
          </Typography>
          {"status" in drawerData && (
            <Typography
              variant="body2"
              sx={{
                backgroundColor: drawerData.status === "Active" ? "#4caf50" : "#f44336",
                px: 1.5,
                py: 0.5,
                borderRadius: 1,
                color: "white",
              }}
            >
              {drawerData.status}
            </Typography>
          )}
        </Box>
      </Box>

      {/* Description */}
      {"description" in drawerData && (
        <Box sx={{ mb: 2 }}>
          <Typography variant="subtitle2" sx={{ color: "#CBCBCB" }}>
            Description
          </Typography>
          <Typography sx={{ color: "white", backgroundColor: "#1E252D", p: 1, borderRadius: 1 }}>
            {drawerData.description || "No description"}
          </Typography>
        </Box>
      )}

      {/* Dummy Additional Info (Roles, Account Type, etc.) */}
      {"roles" in drawerData && (
        <Box sx={{ mb: 2 }}>
          <Typography variant="subtitle2" sx={{ color: "#CBCBCB" }}>
            Roles
          </Typography>
          <Typography sx={{ color: "white" }}>{drawerData.roles}</Typography>
        </Box>
      )}

      {"accountType" in drawerData && (
        <Box sx={{ mb: 2 }}>
          <Typography variant="subtitle2" sx={{ color: "#CBCBCB" }}>
            Account Type
          </Typography>
          <Typography sx={{ color: "white" }}>{drawerData.accountType}</Typography>
        </Box>
      )}

      {"created" in drawerData && (
        <Box sx={{ mb: 2 }}>
          <Typography variant="subtitle2" sx={{ color: "#CBCBCB" }}>
            Created Date
          </Typography>
          <Typography sx={{ color: "white" }}>{drawerData.created}</Typography>
        </Box>
      )}

      {/* Data Policies (placeholder) */}
      <Box sx={{ mb: 2 }}>
        <Typography variant="subtitle2" sx={{ color: "#CBCBCB" }}>
          Data Policies
        </Typography>
        <Typography sx={{ color: "#999", fontStyle: "italic" }}>
          No policies assigned
        </Typography>
      </Box>

      {/* Data Profiles (placeholder) */}
      <Box sx={{ mb: 2 }}>
        <Typography variant="subtitle2" sx={{ color: "#CBCBCB" }}>
          Data Profiles
        </Typography>
        <Typography sx={{ color: "#999", fontStyle: "italic" }}>
          No data profiles configured
        </Typography>
      </Box>

      {/* Actions */}
      <Box sx={{ mt: 2, display: "flex", justifyContent: "flex-end", gap: 2 }}>
        <Button
          variant="outlined"
          startIcon={<DeleteIcon />}
          sx={{ color: "white", borderColor: "white" }}
        >
          Delete
        </Button>
        <Button variant="contained" startIcon={<EditIcon />}>
          Edit
        </Button>
      </Box>
    </>
  ) : (
    <Typography sx={{ color: "white" }}>No record selected</Typography>
  )}
</Drawer>
