<Drawer
  anchor="right"
  open={drawerOpen}
  onClose={() => setDrawerOpen(false)}
  sx={{
    "& .MuiDrawer-paper": {
      width: 420,
      backgroundColor: "#1A2028",
      padding: "24px",
      borderLeft: "1px solid #2F3A45",
    },
  }}
>
  {drawerData ? (
    <Box sx={{ display: "flex", flexDirection: "column", height: "100%" }}>
      {/* Header */}
      <Box sx={{ mb: 3 }}>
        <Typography
          variant="h6"
          sx={{ color: "#fff", fontWeight: 600, fontSize: "20px", mb: 1 }}
        >
          {"name" in drawerData
            ? drawerData.name
            : drawerData.accountOwner}
        </Typography>

        <Box sx={{ display: "flex", gap: 1 }}>
          <Typography
            variant="body2"
            sx={{
              color: "#ccc",
              backgroundColor: "#2C3138",
              px: 1.5,
              py: 0.5,
              borderRadius: 1,
              fontSize: 12,
            }}
          >
            ID: {drawerData.id}
          </Typography>

          {"status" in drawerData && (
            <Typography
              variant="body2"
              sx={{
                backgroundColor:
                  drawerData.status === "Active"
                    ? "#388e3c"
                    : "#d32f2f",
                px: 1.5,
                py: 0.5,
                borderRadius: 1,
                color: "white",
                fontSize: 12,
              }}
            >
              {drawerData.status}
            </Typography>
          )}
        </Box>
      </Box>

      {/* Section Block */}
      <Box
        sx={{
          backgroundColor: "#1E252D",
          borderRadius: 1,
          p: 2,
          mb: 2,
          border: "1px solid #2F3A45",
        }}
      >
        {"description" in drawerData && (
          <Box sx={{ mb: 2 }}>
            <Typography
              variant="subtitle2"
              sx={{ color: "#8D8D8D", mb: 0.5 }}
            >
              Description
            </Typography>
            <Typography sx={{ color: "#fff", fontWeight: 500 }}>
              {drawerData.description || "No description"}
            </Typography>
          </Box>
        )}

        {"roles" in drawerData && (
          <Box sx={{ mb: 2 }}>
            <Typography
              variant="subtitle2"
              sx={{ color: "#8D8D8D", mb: 0.5 }}
            >
              Role(s)
            </Typography>
            <Typography sx={{ color: "#fff", fontWeight: 500 }}>
              {drawerData.roles}
            </Typography>
          </Box>
        )}

        {"accountType" in drawerData && (
          <Box sx={{ mb: 2 }}>
            <Typography
              variant="subtitle2"
              sx={{ color: "#8D8D8D", mb: 0.5 }}
            >
              Account Type
            </Typography>
            <Typography sx={{ color: "#fff", fontWeight: 500 }}>
              {drawerData.accountType}
            </Typography>
          </Box>
        )}

        {"created" in drawerData && (
          <Box sx={{}}>
            <Typography
              variant="subtitle2"
              sx={{ color: "#8D8D8D", mb: 0.5 }}
            >
              Created Date
            </Typography>
            <Typography sx={{ color: "#fff", fontWeight: 500 }}>
              {drawerData.created}
            </Typography>
          </Box>
        )}
      </Box>

      {/* Divider */}
      <Box
        sx={{
          borderTop: "1px solid #2F3A45",
          mt: "auto",
          pt: 2,
          display: "flex",
          justifyContent: "flex-end",
          gap: 2,
        }}
      >
        <Button
          variant="outlined"
          startIcon={<DeleteIcon />}
          sx={{
            color: "white",
            borderColor: "white",
            textTransform: "none",
          }}
        >
          Delete
        </Button>
        <Button
          variant="contained"
          startIcon={<EditIcon />}
          sx={{
            backgroundColor: "#007BFF",
            textTransform: "none",
          }}
        >
          Edit
        </Button>
      </Box>
    </Box>
  ) : (
    <Typography sx={{ color: "white" }}>No record selected</Typography>
  )}
</Drawer>
